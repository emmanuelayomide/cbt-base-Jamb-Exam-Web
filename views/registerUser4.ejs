</head>
<body id="bodyColor4">

  
        <form action="/thirdregistration4" method="Post">
            <!-- The First FormLine List  -->
             <div class="topSpace">

           
<div id="centeralizedRegister">
<%  if(locals.infoMessage) { %>
        <div class="messagePassed">
          <p class="infoMessage"> <%=infoMessage %></p>
       
      </div>  
    <%  } %>

    <div class="dOrigin">
        <div class="d1">
            <h4>School Of Choice</h4>
            <p>Select and Manage Your Choice of School</p>
        </div>
        <div class="d2">
            <div class="twoDetails">
         <div class="nameSection">
            <label for="first Choice">First Choice</label>
            <input type="text" name="firstChoice" id="firstChoice" list="unischool" autofocus  required placeholder="university Name">
           <datalist id="unischool">
                <% if (locals.uniNames){ %>
 <% uniNames.forEach((schoolname)=>{ %>
          <option value="<%=schoolname.name%>">
                            
           <% }) %>
              <%  } %>
           
               </datalist>
     <input type="text" name="firstChoiceSchool" id="firstChoice" list="unicourse" autofocus  required placeholder="Course Of Studies">
               <datalist id="unicourse">
                <% if (locals.universitycourses){ %>
 <% universitycourses.forEach(function (courseuni){ %>
          <option value="<%=courseuni%>">
                            
           <% }) %>
              <%  } %>
           
               </datalist>
              </div> 
               <div class="surnameSection">
                <label for="secondchoice">Second Choice</label>
              <input type="text" list="polyname" name="secondchoice" id="secondchoice" autofocus placeholder="polytechnic name">
               <datalist id="polyname">
                <% if (locals.polyNames){ %>
 <% polyNames.forEach((polylistname)=>{ %>
          <option value="<%=polylistname.name%>">
                            
           <% }) %>
              <%  } %>
           
               </datalist>



              <input type="text" list="polycourse" name="secondChoiceSchool" id="secondchoice" autofocus placeholder="course" required>
           <datalist id="polycourse">
                <% if (locals.polytechniccourses){ %>
 <% polytechniccourses.forEach(function (polycourse){ %>
          <option value="<%=polycourse%>">
                            
           <% }) %>
              <%  } %>
           
               </datalist>
          
            </div>
        </div>
         
        </div>
        <div class="d3">
            <div class="empty">
                <label for="thridchice">Third Choice</label>
            <input type="text" list="collegename" name="thirdchoice" id="phoneNumber" required placeholder="colleges">
             <datalist id="collegename">
                <% if (locals.collegeNames){ %>
 <% collegeNames.forEach((collegename)=>{ %>
          <option value="<%=collegename.name%>">
                            
           <% }) %>
              <%  } %>
           
               </datalist>
          
          
            <input type="text" list="colegecourse" name="thirdChoiceSchool" id="phoneNumber" required placeholder="Course of Studies">
    
              <datalist id="colegecourse">
                <% if (locals.collegecourses){ %>
 <% collegecourses.forEach(function (colegecourse){ %>
          <option value="<%=colegecourse%>">
                            
           <% }) %>
              <%  } %>
           
               </datalist>
          
        </div>
        </div>
        


      <div class="d3">
            <div class="empty">
                <label for="thridchice">local Gov Area</label>
            <select name="localGvArea" id="local" class="lga" required>
                <option value="">Select Your Local Goverment Area</option>
                <% if(locals.localGvt){%>
                <% localGvt.forEach(local =>{ %>
<option value="<%=local %>"><%=local %></option>
               <% }) %>
                   
                

              <%  } else { %>
<option disabled value="">cant Load local governt Area</option>
             <% } %>
            </select>
        </div>
        </div>  
    </div>
    
<hr>
<div class="nextBrn">
 <button>Complete Regsitration</button>
</div>
</form>
</div>

</div>


  </body>
  </html>